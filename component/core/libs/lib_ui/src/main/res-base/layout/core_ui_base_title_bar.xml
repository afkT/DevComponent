<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vid_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="@dimen/dp_45">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vid_left_cl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <afkt_replace.core.lib.ui.widget.BaseImageView
            android:id="@+id/vid_back_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/op_arrow_left_black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/vid_title_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent">

        <afkt_replace.core.lib.ui.widget.BaseTextView
            android:id="@+id/vid_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            tools:text="Title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vid_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_width="@dimen/dp_45" />
</androidx.constraintlayout.widget.ConstraintLayout>