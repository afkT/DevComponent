<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/vid_status_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="@color/dev_http_capture_title_bg_color"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/vid_back_iv"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:background="@drawable/dev_http_capture_back"
            android:padding="@dimen/dp_15" />

        <TextView
            android:id="@+id/vid_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_56"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_5"
            android:singleLine="true"
            android:text="项目 Debug 功能编译"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="调试功能"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <Button
                android:id="@+id/vid_environment_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="切换环境"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/vid_http_capture_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="抓包数据"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/vid_open_ue_tool_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="打开 UI 可视化调试"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/vid_close_ue_tool_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="关闭 UI 可视化调试"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="数据处理"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <Button
                android:id="@+id/vid_delete_http_capture_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="删除抓包数据"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>