<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="core_ui_AppTheme" />

    <style name="core_ui_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- 不设置为全屏防止状态栏隐藏紧接着又显示 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/launcher_module_bg</item>
    </style>

    <!-- TextView 默认样式 -->

    <style name="AppTheme.Base_TextView">
        <!-- 设置铺满 -->
        <item name="android:layout_width">match_parent</item>
        <!-- 设置高度 -->
        <item name="android:layout_height">wrap_content</item>
        <!-- 设置字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 解决控件字母自动大写问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 不绘制边距 -->
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>