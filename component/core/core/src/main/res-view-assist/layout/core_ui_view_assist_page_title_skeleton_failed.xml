<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="appUI"
            type="afkt_replace.core.ui.listener.AppUI" />

        <variable
            name="appListener"
            type="afkt_replace.core.ui.listener.AppListener" />

        <variable
            name="appThemeRes"
            type="afkt_replace.core.ui.skin.AppThemeRes" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{appThemeRes.themeBackground}">

        <include
            android:id="@+id/vid_header"
            layout="@layout/core_ui_base_header"
            app:layout_constraintTop_toTopOf="parent"
            binding:appListener="@{appListener}"
            binding:appThemeRes="@{appThemeRes}"
            binding:appUI="@{appUI}" />

        <afkt_replace.core.ui.widget.BaseImageView
            android:id="@+id/vid_icon"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:background="@drawable/op_failed_warning_white"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

        <afkt_replace.core.ui.widget.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_tip_failed_click_retry"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vid_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>